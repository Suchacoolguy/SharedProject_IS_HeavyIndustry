<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:SharedProject_IS_HeavyIndustry.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="600"
             x:Class="SharedProject_IS_HeavyIndustry.Views.DragAndDropView"
             xmlns:converters="using:SharedProject_IS_HeavyIndustry.Converters"
             xmlns:views="clr-namespace:SharedProject_IS_HeavyIndustry.Views"
             x:DataType="vm:MainWindowViewModel"
             >

    <UserControl.Resources>
        <converters:DivideByTenConverter x:Key="DivideByTenConverter"/>
    </UserControl.Resources>
    
    <Grid Name="EntireGrid" DragDrop.AllowDrop="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Existing content -->
             <Grid DragDrop.AllowDrop="True" Grid.Column="0" Margin="5">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                <!-- Parts arranged inside raw materials -->
                <StackPanel Name="MyStackPanel" Orientation="Vertical" DragDrop.AllowDrop="True">
                    <ItemsControl Name="RawMaterialList" ItemsSource="{Binding DragAndDropViewModel.ArrangedRawMaterials}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Canvas Name="MyCanvas" Width="600" Height="55">
                                    <!-- Raw material -->
                                    <Border BorderBrush="Black" BorderThickness="1">
                                        <Rectangle Name="RawMaterialRectangle" Height="30" Width="{Binding Length, Converter={StaticResource DivideByTenConverter}}"
                                                   Fill="LightGray" Canvas.Left="0" Canvas.Top="5" DragDrop.AllowDrop="True" Tag="{Binding}" />
                                    </Border>
                                    <TextBlock Text="{Binding Length}" Canvas.Left="0" Canvas.Top="35"/>
                                    <!-- Parts -->
                                    <TextBlock Name="RemainingLengthText" Text="{Binding RemainingLength}" Foreground="{Binding RectangleColor}" Canvas.Right="0" Canvas.Top="35"/>
                                    <ItemsControl ItemsSource="{Binding PartsInside}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Name="PartBorder" BorderBrush="Black" BorderThickness="1">
                                                    <Rectangle Name="PartRectangle" Height="30" Width="{Binding Length, Converter={StaticResource DivideByTenConverter}}"
                                                               Fill="LightGoldenrodYellow" PointerPressed="Part_PointerPressed" DragDrop.AllowDrop="True" Tag="{Binding }"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Canvas>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- Our ghost rectangle -->
                    <Border BorderBrush="Black" Width="100" BorderThickness="1" Name="GhostItem" Opacity="0.6">
                        <Rectangle Height="30" Width="100" Fill="LightGoldenrodYellow"
                                   DragDrop.AllowDrop="True" Tag="{Binding }"/>
                    </Border>
                </StackPanel>
                </ScrollViewer>
    </Grid>

        <!-- OverSizePartsView is added here when the PartsForSeparate list in the WorkManager has an item. -->
    </Grid>
    
    
</UserControl>