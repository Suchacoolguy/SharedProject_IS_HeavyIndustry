<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SharedProject_IS_HeavyIndustry.Views.MainWindow"
        xmlns:views="clr-namespace:SharedProject_IS_HeavyIndustry.Views"
        xmlns:tabViews="clr-namespace:SharedProject_IS_HeavyIndustry.Views.TabViews"
        xmlns:avaloniaGif="clr-namespace:AvaloniaGif;assembly=AvaloniaGif"
        Icon="/Assets/avalonia-logo.ico"
        Title="아이에스중공업 - 네스팅 소프트웨어">
    <Window.Styles>
        <Style Selector="Image.LoadingImg">
            <Style.Animations>
                <Animation Duration="0:0:3" IterationCount="INFINITE">
                    <KeyFrame Cue="0%">
                        <Setter Property="Opacity" Value="0.0"/>
                        <Setter Property="RotateTransform.Angle" Value="0.0"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%"> 
                        <Setter Property="Opacity" Value="1.0"/>
                        <Setter Property="RotateTransform.Angle" Value="90.0"/>
                    </KeyFrame>
                </Animation> 
            </Style.Animations>
        </Style>
    </Window.Styles>
    <DockPanel Name="BasicPanel" LastChildFill="True">
        <Border BorderBrush="#DFE9F5" BorderThickness="0,1.2" DockPanel.Dock="Top">
            <StackPanel Name="Header" Height="70" Background="#ECF2F9" Orientation="Horizontal">
                <Button Click="NewProjectWindow_btn_click" Background="Transparent">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Image Source="/Assets/folder.png" Height="30" Margin="0, 0, 0, 5"/>
                        <TextBlock Text="새프로젝트" HorizontalAlignment="Center" FontSize="10"/>
                    </StackPanel>
                </Button>
                <Button  Click="Report_btn_click" Background="Transparent">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Image Source="/Assets/folder.png" Height="30" Margin="0, 0, 0, 5"/>
                        <TextBlock Text="레포트 출력" HorizontalAlignment="Center" FontSize="10"/>
                    </StackPanel>
                </Button>
                <Button Click="Standard_btn_click" Background="Transparent">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Image Source="/Assets/folder.png" Height="30" Margin="0, 0, 0, 5"/>
                        <TextBlock Text="규격 목록" HorizontalAlignment="Center" FontSize="10"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
        <Grid DockPanel.Dock="Top">
            <TabControl Name="TabFrame" Margin="0" Padding="0"/>
            <Grid Name="LoadingGrid" IsVisible="False">
                <Image Classes="LoadingImg" Source="avares://SharedProject_IS_HeavyIndustry/Assets/loading.png" 
                       Width="100" Height="100"/>
            </Grid>
        </Grid>
    </DockPanel>
</Window>

